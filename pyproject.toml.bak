[project]
name = "ollabridge"
version = "0.1.0"
description = "Turn your PC into a private, OpenAI-compatible LLM provider in ~60 seconds"
readme = "README.md"
requires-python = ">=3.10"
license = { file = "LICENSE" }

authors = [
  { name = "Ruslan Magana Vsevolodovna", email = "contact@ruslanmv.com" }
]
maintainers = [
  { name = "Ruslan Magana Vsevolodovna", email = "contact@ruslanmv.com" }
]

keywords = [
  "ollama",
  "llm",
  "openai",
  "api",
  "gateway",
  "local-first",
  "ai",
  "machine-learning",
  "self-hosted",
  "langchain",
  "chatgpt",
  "embeddings",
  "deepseek",
  "llama",
]

classifiers = [
  "Development Status :: 4 - Beta",
  "Intended Audience :: Developers",
  "Intended Audience :: Science/Research",
  "License :: OSI Approved :: Apache Software License",
  "Operating System :: OS Independent",
  "Programming Language :: Python :: 3",
  "Programming Language :: Python :: 3.10",
  "Programming Language :: Python :: 3.11",
  "Programming Language :: Python :: 3.12",
  "Topic :: Scientific/Engineering :: Artificial Intelligence",
  "Topic :: Software Development :: Libraries :: Python Modules",
  "Topic :: Internet :: WWW/HTTP :: HTTP Servers",
  "Framework :: FastAPI",
]

dependencies = [
  "anyio",
  "fastapi>=0.110",
  "httpx>=0.26",
  "itsdangerous>=2.1",
  "pydantic-settings>=2.2",
  "pydantic>=2.6",
  "python-dotenv>=1.0",
  "pyyaml>=6.0",
  "rich>=13.7",
  "slowapi",
  "sqlalchemy",
  "sqlmodel",
  "tenacity>=8.2",
  "typer>=0.12",
  "uvicorn[standard]>=0.27",
  "websockets>=12.0",
]

[project.urls]
Homepage = "https://github.com/ruslanmv/ollabridge"
Documentation = "https://github.com/ruslanmv/ollabridge#readme"
Repository = "https://github.com/ruslanmv/ollabridge"
Issues = "https://github.com/ruslanmv/ollabridge/issues"
Changelog = "https://github.com/ruslanmv/ollabridge/releases"

[project.optional-dependencies]
dev = [
  "pytest>=7.4",
  "pytest-cov>=4.1",
  "pytest-asyncio>=0.21",
  "black>=23.7",
  "ruff>=0.0.280",
  "mypy>=1.4",
]

[project.scripts]
ollabridge = "ollabridge.cli.main:app"
ollabridge-node = "ollabridge.node.cli:app"
ollabridge-mcp = "ollabridge.mcp.server:main"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

# --- Hatchling src/ layout ---
[tool.hatch.build.targets.wheel]
packages = ["ollabridge"]

[tool.hatch.build.targets.wheel.sources]
"src" = ""

[tool.hatch.build.targets.sdist]
include = [
  "src/**",
  "README.md",
  "LICENSE",
]
