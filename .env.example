# OllaBridge server
ENV=dev
HOST=0.0.0.0
PORT=11435
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Auth: set one or more API keys, comma-separated
API_KEYS=sk-ollabridge-REPLACE_ME

# Auth mode: required | local-trust | pairing
AUTH_MODE=required

# Pairing (only used when AUTH_MODE=pairing)
PAIRING_LOCAL_ONLY=true
PAIRING_CODE_TTL_SECONDS=120
#PAIRING_TOKENS_FILE=~/.ollabridge/pair_tokens.json

# Rate limiting
RATE_LIMIT=60/minute

# Ollama upstream
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_PATH=/api/chat
OLLAMA_EMBED_PATH=/api/embeddings
DEFAULT_MODEL=deepseek-r1
DEFAULT_EMBED_MODEL=nomic-embed-text

# Database
# If empty, uses SQLite under ~/.ollabridge/ollabridge.sqlite
DATABASE_URL=
